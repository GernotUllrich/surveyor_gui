<!DOCTYPE html>
<html>
  <head>
    <title>SurveyorGui</title>
    <%= stylesheet_link_tag    "surveyor_gui_all", :media => "all" %>
    <%= javascript_include_tag "surveyor_gui_all" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
   <div id="surveyor_gui_mount_point" data-surveyor_gui_mount_point="<%= SurveyorGui::Engine.routes.default_scope[:module] %>">
   <% flash.each do |key, value| %>
     <%= content_tag(:div, value, :class => "flash #{key}") %>
   <% end %>
   <%= yield %>

  </body>
</html>
